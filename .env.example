# FreeRADIUS API Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_DRIVER=mysql.connector
DB_NAME=raddb
DB_USER=raduser
DB_PASS=radpass
DB_HOST=mydb
DB_PORT=3306

# API Configuration
API_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# Pagination Settings
ITEMS_PER_PAGE=100

# Database Table Names (Advanced - usually don't need to change)
TABLE_RADCHECK=radcheck
TABLE_RADREPLY=radreply
TABLE_RADGROUPCHECK=radgroupcheck
TABLE_RADGROUPREPLY=radgroupreply
TABLE_RADUSERGROUP=radusergroup
TABLE_NAS=nas

# Application Settings
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# API Key Authentication
API_KEY_ENABLED=false
API_KEY=your-api-key-change-this-in-production
API_KEY_HEADER=X-API-Key

# Docker-specific settings (used in docker-compose.yml)
MYSQL_ROOT_PASSWORD=mypass
PMA_PORT=8080
